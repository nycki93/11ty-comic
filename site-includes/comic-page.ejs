<%- content %>

<%
  const comicPages = collections['comic-pages'];
  const index = comicPages.findIndex(c => c.url == page.url);
  const prev = comicPages[index - 1];
  const next = comicPages[index + 1];
%>

<% if (prev) { %>

<a href="<%= prev.url %>">PREV</a>

<% } %> 
<% if (next) { %>

<a href="<%= next.url %>">NEXT</a>

<% } %>
